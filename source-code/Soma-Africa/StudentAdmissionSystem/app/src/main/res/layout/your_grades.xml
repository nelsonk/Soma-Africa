<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View

        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:id="@+id/v0"
        android:background="#ff0b0daf"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Combination Details"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        android:layout_below="@+id/v0"
        android:id="@+id/tvcombination"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        />



    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="2sp"
        android:layout_below="@+id/tvcombination"
        android:id="@+id/v1"
        android:background="#ff0b0daf"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/v1"
        android:id="@+id/lldetails"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:id="@+id/etsub1"
            android:hint="Enter combination e.g BCM"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"

            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:id="@+id/etgrade1"
            android:hint="Enter grade e.g 1,3,4"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"

            />


    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:layout_below="@+id/lldetails"
    android:layout_centerHorizontal="true"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:id="@+id/bgrade"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

</LinearLayout>

</RelativeLayout>

    </ScrollView>