<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ff0b0daf"
        android:id="@+id/rlmenu"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:id="@+id/bback"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provide Login Details"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        android:layout_below="@+id/rlmenu"
        android:id="@+id/tvcombination"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        />



    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="2sp"
        android:layout_below="@+id/tvcombination"
        android:id="@+id/v1"
        android:background="#ff0b0daf"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/v1"
        android:id="@+id/lldetails"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:id="@+id/etlusername"
            android:hint="Enter Username"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"

            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:id="@+id/etlpassword"
            android:hint="Enter Password"
            android:textColorHint="@color/blue"
            android:textColor="@color/blue"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:id="@+id/etlcpassword"
            android:hint="Confirm Password"
            android:textColorHint="@color/blue"
            android:textColor="@color/blue"
            />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:layout_below="@+id/lldetails"
        android:id="@+id/blenter"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>